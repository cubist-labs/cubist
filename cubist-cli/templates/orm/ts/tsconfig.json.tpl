{
    "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2020"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "build/**/*.ts",
    "src/**/*.ts"
  ]
}
