{
    "env": {
        "node": true,
        "commonjs": true,
        "mocha": true,
        "es2019": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "google"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "root": true,
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
          "error",
          { "code": 100, "ignoreTemplateLiterals": true }
        ],
        "object-curly-spacing": [
          "error",
          "always"
        ],
        "comma-dangle": ["warn", {
          "arrays": "never",
          "objects": "always",
          "imports": "always",
          "exports": "always",
          "functions": "never"
        }],
        "camelcase": "off"
    }
}
